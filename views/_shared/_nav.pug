mixin nav(user)
        nav.navbar.navbar-default.navbar-fixed-top
            .container
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='#') Express 24
                #navbar.navbar-collapse.collapse
                    ul.nav.navbar-nav
                        li.active
                            a(href='/') Home
                        li
                            a(href='/books') Books
                        li
                            a(href='/authors') Authors
                        if user
                            li
                                a(href='/bookshelf') Bookshelf
                            li
                                a(href='/profile/') Profile
                    form.navbar-form.navbar-right.form-inline
                        if user
                            span.greet Hi #{user.username}
                            a#btn-logout.btn.btn-danger.nav-btn(href='/auth/logout') Logout
                        else
                            a#btn-sign-in.btn.btn-success.nav-btn(type='button', data-toggle='modal', data-target='#LoginModal') Login 
                            a#btn-register.btn.btn-success.nav-btn(type='button', data-toggle='modal', data-target='#RegisterModal') Register     
                            