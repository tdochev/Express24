include _chat

doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(name='description', content='')
        meta(name='author', content='')
        title Express-24
        // Bootstrap core CSS
        link(href='/static/css/libs.css', rel='stylesheet')
        link(href='/static/css/app.css', rel='stylesheet')
        // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
        //if lt IE 9
            script(src='https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js')
            script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
    body
        block content
        // /container
        //
            Bootstrap core JavaScript
            ==================================================
        // Placed at the end of the document so the pages load faster
        #LoginModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='modalLabel', aria-hidden='true')
            .modal-dialog(role='document')
                form.modal-content(action="/auth/sign-in" method="POST")
                    .modal-header
                        button.close(type='button', data-dismiss='modal', aria-label='Close')
                            span(aria-hidden='true') ×
                        h4#myModalLabel.modal-title Sign in
                    .modal-body
                        .form-group
                            input.form-control(name="username", type='text', placeholder='User name')
                        .form-group
                            input.form-control(name="password", type='password', placeholder='Password')
                    .modal-footer
                        button.btn.btn-default(type='button', data-dismiss='modal') Close
                        button#form-sign-in.btn.btn-success(type='submit') Sign in
        #RegisterModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='modalLabel', aria-hidden='true')
            .modal-dialog(role='document')
                form.modal-content(action="/auth/sign-up" method="POST")
                    .modal-header
                        button.close(type='button', data-dismiss='modal', aria-label='Close')
                            span(aria-hidden='true') ×
                        h4#myModalLabel.modal-title Register
                    .modal-body
                        .form-group
                            input.form-control(name="username", type='text', placeholder='User name')
                        .form-group
                            input.form-control(name="password", type='password', placeholder='Password')
                    .modal-footer
                        button.btn.btn-default(type='button', data-dismiss='modal') Close
                        button#form-sign-in.btn.btn-success(type='submit') Register
        if (messages && messages.length)
            p#flash-message.hidden #{messages}
        if (user)
            block chat
                +chat()
        .footer
        script(src='/static/js/libs.js')
        script(src='/static/js/app.js')
        